package eje;

public class StringCalculator {

	public int add(String numbers) {
		String [] values = numbers.split(",");

		if (numbers.isEmpty()) {
			return 0;			
		} 
		
		if (values.length==1) {
				return Integer.parseInt(numbers);
		} else{
				return Integer.parseInt(values[0]) +  Integer.parseInt(values[1]);
		}
		
	}




}
